<Alloy>
	<!-- iOS Structure -->
	<NavigationWindow id="navWindow" platform="ios">
		<Window id="indexWindow" title="Choose a Control">
			<ActivityIndicator visible="false" id="activityIndicator" message="Loading..."/>
			<ListView id="list">
	        <ListSection>
            <ListItem title="List View" itemId="ListView" class="listItem"></ListItem>
            <ListItem title="Label" itemId="Label" class="listItem"></ListItem>
            <ListItem title="Button" itemId="Button" class="listItem"></ListItem>
            <ListItem title="E-mail Dialog" itemId="EmailDialog" class="listItem"></ListItem>
            <ListItem title="Picker" itemId="Picker" class="listItem"></ListItem>
            <ListItem title="Options Dialog" itemId="OptionsDialog" class="listItem"></ListItem>
            <ListItem title="Switch" itemId="Switch" class="listItem"></ListItem>
            <ListItem title="Tab" itemId="Tab" class="listItem"></ListItem>
						<ListItem title="Slider" itemId="Slider" class="listItem"></ListItem>
            <ListItem title="Activity Indicator" itemId="ActIndicator" class="listItem"></ListItem>
	        </ListSection>
		    </ListView>
		</Window>
	</NavigationWindow>

	<!-- Android Structure -->
	<Window id="indexWindow" platform="android" title="Choose a Control">
		<ActivityIndicator visible="false" id="activityIndicator" message="Loading..."/>
		<ListView id="list">
        <ListSection>
					<ListItem title="List View" itemId="ListView" class="listItem"></ListItem>
					<ListItem title="Label" itemId="Label" class="listItem"></ListItem>
					<ListItem title="Button" itemId="Button" class="listItem"></ListItem>
					<ListItem title="E-mail Dialog" itemId="EmailDialog" class="listItem"></ListItem>
					<ListItem title="Picker" itemId="Picker" class="listItem"></ListItem>
					<ListItem title="Options Dialog" itemId="OptionsDialog" class="listItem"></ListItem>
					<ListItem title="Switch" itemId="Switch" class="listItem"></ListItem>
					<ListItem title="Tab" itemId="Tab" class="listItem"></ListItem>
					<ListItem title="Slider" itemId="Slider" class="listItem"></ListItem>
					<ListItem title="Activity Indicator" itemId="ActIndicator" class="listItem"></ListItem>
				</ListSection>
	    </ListView>
	</Window>
</Alloy>
